<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="175dp"
    android:id="@+id/activity_category_layout"
    android:layout_height="wrap_content"
    android:layout_marginEnd="12dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_category_image_view"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/rounded_no_border_shape"
        tools:srcCompat="@tools:sample/backgrounds/scenic"
        android:scaleType="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Titre"
        android:id="@+id/activity_category_text_view"
        android:textSize="16dp"
        android:textColor="@color/colorMineShaft"/>

</LinearLayout>